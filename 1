#include "shell.h"

int _cd(char **av);
int _help(char **av);
int _exit(char **av);

char *_strbuiltin[] = {
  "cd",
  "help",
  "exit"
};

int (*_funcbuiltin[]) (char **) = {
  &_cd,
  &_help,
  &_exit
};

/**
 * _builtins - functions for builtin cmds.
 *
 * Return: Always 1 for success.
 */

int _builtins(void)
{
	return (sizeof(_strbuiltin) / sizeof(char *));
}

/**
 * _cd - main biultin function to change directory.
 * @av: as the argument count.
 *
 * Return: Always 1 for succes.
 */

int _cd(**av)
{
	if (av[1] == NULL)
	{
		fprintf(stderr, "$ Error! Argument requiered to change directory\n");
	}
	else
	{
		if (chdir(av[1]) != 0)
		{
			perror("$");
		}
	}
	return (1);
}

int _help(char **av)
{
	int b;
	printf("Marvin Kurland && Sospeter Nyaga\n");
	Printf("C Simple shell @Alx 2022.\n");
	printf("The following are built in:\n");

	for (b = 0; b < _builtins(); b++)
	{
		printf("  %s\n", _strbuiltin[b]);
	}

	printf("Use 'man' for more command information programs.\n");
	return 1;
}

int _exit(char **av)
{
	return (0);
}
